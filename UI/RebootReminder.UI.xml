<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" Height="150" Width="400" WindowStyle="None" WindowStartupLocation="Manual" WindowState="Normal" ResizeMode="NoResize" Name="FormUI" ShowInTaskbar="False">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="Background" Value="#2196F3" />
            <Setter Property="BorderBrush" Value="#2196F3" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="10 5" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"  BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="2,2,2,2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,2,2,2" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD4B210" />
                    <Setter Property="BorderBrush" Value="#FFD4B210" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0D47A1" />
                    <Setter Property="BorderBrush" Value="#0D47A1" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#999" />
                    <Setter Property="Background" Value="#DDD" />
                    <Setter Property="BorderBrush" Value="#DDD" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="----------"/> <!--400*150-->
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="#FFFD0101" BorderThickness="0,0,0,2">
            <Label Content="Computer reboot reminder" Foreground="White" FontWeight="Bold" FontSize="14" />
        </Border>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Stretch">
            <Label Content="Your computer " Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Name="LBL_ComputerName" Content="------" Foreground="#FFF77405" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" />
            <Label Content="not been restarted since :" VerticalAlignment="Center" Foreground="#FFFBFBFB"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="#FFFB9602" CornerRadius="5" Margin="3,0,3,0">
                <Label Name="LBL_DayDigit3" Content="0" FontSize="24" FontWeight="Bold" Foreground="#FFF90D0D"/>
            </Border>
            <Border Background="#FFFB9602" CornerRadius="5" Margin="3,0,3,0">
                <Label Name="LBL_DayDigit2" Content="0" FontSize="24" FontWeight="Bold" Foreground="#FFF90D0D"/>
            </Border>
            <Border Background="#FFFB9602" CornerRadius="5" Margin="3,0,3,0">
                <Label Name="LBL_DayDigit1" Content="0" FontSize="24" FontWeight="Bold" Foreground="#FFF90D0D"/>
            </Border>
            <Label Content="Day(s)" FontSize="24" Foreground="#FFFBFBFB"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="15,0,0,0">
            <Button Name="B_RebootNow" FontSize="15" Margin="5,0,5,0" Height="30">Restart Now</Button>
            <Button Name="B_RebootLater" FontSize="15" Margin="5,0,5,0">Restart Later</Button>
        </StackPanel>
    </Grid>
</Window>